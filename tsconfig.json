{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2021",
    "module": "node16",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./esm",

    /* Module Resolution Options */
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__test__"]
}
