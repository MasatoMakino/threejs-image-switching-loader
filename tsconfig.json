{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "es2015",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./bin",
    "rootDir": "./src",

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
